<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Type</th>
      <th>Intent</th>
      <th>State</th>
      <th>Transaction</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.type %></td>
        <td><%= payment.intent %></td>
        <td><%= payment.state %></td>
        <td><%= payment.transaction_id %></td>
        <td><%= payment.data %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_person_transaction_sender_payment_path(payment, transaction_id: params[:transaction_id], person_id: params[:person_id]) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

