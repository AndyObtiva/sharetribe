- if @recipient == @transaction.traveller
  %tr
    %td{:align => "left"}
      %font{body_font}
        = t("emails.confirm_delivery.delivery_coming_soon_traveller", :date => @listing.valid_until, :title => @listing.title, :sender => @sender_name, :recipient => @recipient_name)
  %tr
    %td{:align => "left", :style => "padding-top: 15px;"}
      %font{body_font}
        = raw t("emails.confirm_delivery.confirm_once_delivered_traveller", :confirm_link => @confirm_link)
  %tr
    %td{:align => "left", :style => "padding-top: 15px;"}
      %font{body_font}
        = raw t("emails.confirm_delivery.provide_confirmation_number_traveller")
- else
  %tr
    %td{:align => "left"}
      %font{body_font}
        = t("emails.confirm_delivery.delivery_coming_soon_recipient", :date => @listing.valid_until, :title => @listing.title, :sender => @sender_name, :traveller => @traveller_name)
  %tr
    %td{:align => "left", :style => "padding-top: 15px;"}
      %font{body_font}
        = raw t("emails.confirm_delivery.confirm_once_delivered_recipient", :confirm_link => @confirm_link)
  %tr
    %td{:align => "left", :style => "padding-top: 15px;"}
      %font{body_font}
        = raw t("emails.confirm_delivery.provide_confirmation_number_recipient", :confirmation_number => @sender_payment.confirmation_number)

%tr
  %td{:align => "left", :style => "padding-top: 25px; padding-bottom: 25px;"}
    = render :partial => "green_action_button", :locals => { :text => t("emails.confirm_delivery.confirm"), :url => @confirm_url}
